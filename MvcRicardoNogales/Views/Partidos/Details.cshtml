@model MvcRicardoNogales.Models.PartidoDetalleDTO

<div class="container mt-4">
    <h2 class="mb-4">
        @Model.NombreEquipoLocal vs @Model.NombreEquipoVisitante
    </h2>

    <div class="card p-3 mb-4">
        <p><strong>Fecha y Hora:</strong> @Model.FechaHora.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Resultado:</strong> @Model.GolesLocal - @Model.GolesVisitante</p>
    </div>

    <div class="mb-4">
        <h4>Goleadores</h4>
        @if (Model.Goleadores != null && Model.Goleadores.Any())
        {
            <ul class="list-group">
                @foreach (var gol in Model.Goleadores)
                {
                    <li class="list-group-item">
                        @gol.NombreJugador - Minuto @gol.Minuto'
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No hay goles registrados.</p>
        }
    </div>

    <div>
        <h4>Tarjetas</h4>
        @if (Model.Tarjetas != null && Model.Tarjetas.Any())
        {
            <ul class="list-group">
                @foreach (var tarjeta in Model.Tarjetas)
                {
                    <li class="list-group-item">
                        @tarjeta.NombreJugador - @tarjeta.TipoTarjeta
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No hay tarjetas registradas.</p>
        }
    </div>
</div>
