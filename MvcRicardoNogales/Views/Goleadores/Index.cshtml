@model List<MvcRicardoNogales.Models.GoleadorDTO>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0 text-center">Ranking de Goleadores</h2>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-dark text-white">
                        <tr class="text-center">
                            <th class="align-middle" style="width: 10%">Posición</th>
                            <th class="align-middle" style="width: 35%">Jugador</th>
                            <th class="align-middle" style="width: 10%">Dorsal</th>
                            <th class="align-middle" style="width: 25%">Equipo</th>
                            <th class="align-middle" style="width: 20%">Goles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var medal = "";
                            var rowClass = "";

                            if (i == 0) { medal = "🥇"; rowClass = "table-warning"; }
                            else if (i == 1) { medal = "🥈"; rowClass = "table-secondary"; }
                            else if (i == 2) { medal = "🥉"; rowClass = "table-info"; }

                            <tr class="@rowClass text-center">
                                <td class="align-middle fw-bold">@(i + 1) @Html.Raw(medal)</td>
                                <td class="align-middle text-start">@Model[i].NombreJugador</td>
                                <td class="align-middle">@Model[i].Dorsal</td>
                                <td class="align-middle">@Model[i].NombreEquipo</td>
                                <td class="align-middle fw-bold">@Model[i].Goles</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted text-center">
            <small>Última actualización: @DateTime.Now.ToString("dd/MM/yyyy")</small>
        </div>
    </div>
</div>