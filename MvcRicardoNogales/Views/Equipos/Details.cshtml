@model MvcRicardoNogales.Models.EquipoDetalleDTO
@using System.Linq

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Equipos" asp-action="Index">Equipos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Nombre</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm text-center py-4">
                @if (!string.IsNullOrEmpty(Model.Escudo))
                {
                    <img src="@Model.Escudo" class="img-fluid mx-auto mb-3" style="max-height: 180px;" alt="Escudo de @Model.Nombre" />
                }
                else
                {
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" fill="currentColor" class="bi bi-shield text-secondary" viewBox="0 0 16 16">
                            <path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z" />
                        </svg>
                    </div>
                }
                <h3 class="fw-bold">@Model.Nombre</h3>

                <div class="mt-4 border-top pt-4 px-4">
                    <div class="row text-start">
                        <div class="col-6">
                            <p class="small text-muted mb-1">Jugadores</p>
                            <p class="fw-medium mb-0">@(Model.Jugadores?.Count() ?? 0)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-people-fill me-2" viewBox="0 0 16 16">
                                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                            </svg>
                            Plantilla del Equipo
                        </h4>
                        <span class="badge bg-light text-primary rounded-pill fs-6 px-3">@(Model.Jugadores?.Count() ?? 0) jugadores</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Jugadores != null && Model.Jugadores.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Dorsal</th>
                                        <th>Nombre</th>
                                        <th>Apellidos</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var jugador in Model.Jugadores)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <span class="badge bg-primary rounded-pill px-3 py-2 fw-bold">@jugador.Dorsal</span>
                                            </td>
                                            <td class="fw-medium">@jugador.Nombre</td>
                                            <td class="fw-medium">@jugador.Apellidos</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-person-slash text-muted mb-3" viewBox="0 0 16 16">
                                <path d="M13.879 10.414a2.501 2.501 0 0 0-3.465 3.465l3.465-3.465Zm.707.707-3.465 3.465a2.501 2.501 0 0 0 3.465-3.465Zm-4.56-1.096a3.5 3.5 0 1 1 4.949 4.95 3.5 3.5 0 0 1-4.95-4.95ZM11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm-9 8c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Z" />
                            </svg>
                            <p class="text-muted mb-0">Este equipo no tiene jugadores registrados todavía.</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>