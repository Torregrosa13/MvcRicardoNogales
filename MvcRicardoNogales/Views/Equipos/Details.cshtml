@model MvcRicardoNogales.Models.EquipoDetalleDTO
@using System.Linq
<h4>Plantilla</h4>

@if (Model.Jugadores != null && Model.Jugadores.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Dorsal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jugador in Model.Jugadores)
            {
                <tr>
                    <td>@jugador.Nombre</td>
                    <td>@jugador.Apellidos</td>
                    <td>@jugador.Dorsal</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Este equipo no tiene jugadores registrados todavía.</p>
}
