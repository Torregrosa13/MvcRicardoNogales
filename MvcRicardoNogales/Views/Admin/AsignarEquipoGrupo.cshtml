@model MvcRicardoNogales.Models.EquipoGrupoDTO

<div class="container mt-4">
    <h2>Asignar Equipo a Grupo</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="AsignarEquipoGrupo" method="post">
        <div class="form-group mb-3">
            <label>Equipo</label>
            <select asp-for="IdEquipo" class="form-control">
                <option value="">Seleccione un equipo</option>
                @foreach (var equipo in ViewBag.Equipos)
                {
                    <option value="@equipo.IdEquipo">@equipo.Nombre</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label>Grupo</label>
            <select asp-for="IdGrupo" class="form-control">
                <option value="">Seleccione un grupo</option>
                @foreach (var grupo in ViewBag.Grupos)
                {
                    <option value="@grupo.IdGrupo">@grupo.Nombre</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">Asignar</button>
    </form>
</div>
